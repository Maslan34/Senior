<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale işlemleri /</span> Makaleyi Düzenle</h4>
    
    <div class="row">
      <form action="/makaleRevisionPost/<%= findMakale.makaleID%>" method="POST" enctype="multipart/form-data">
        <div class="col-md-6">
          <div class="card mb-4">
            <h5 class="card-header">Başlık</h5>
            <div class="card-body">
              <div class="form-floating">
                <input name="title" type="text" class="form-control" id="title" placeholder="title" aria-describedby="title" value="<%= findMakale.title %>">
                <label for="title">Lütfen Bir Başlık Giriniz...</label>
                <div id="title" class="form-text">
                  Bu gerekli bir alandır.
                </div>
              </div>
            </div>
          </div>
        </div>
  
        <div class="col-md-6">
          <div class="card mb-4">
            <h5 class="card-header">Konu</h5>
            <div class="card-body">
              <div class="form-floating">
                <input name="subject" type="text" class="form-control" id="subject" placeholder="subject" aria-describedby="subject" value="<%= findMakale.subject %>">
                <label for="subject">Lütfen Bir Konu Giriniz...</label>
                <div id="subject" class="form-text">
                  Bu gerekli bir alandır.
                </div>
              </div>
            </div>
          </div>
        </div>
  
        <div class="col-md-6">
          <div class="card mb-4">
            <h5 class="card-header">Makale Türü</h5>
            <div class="card-body">
              <div class="mb-3">
                <label for="articleType" class="form-label">Makale Konusu</label>
                <select name="articleType" class="form-select" id="articleType" aria-label="articleType">
                  <option value="Computer" <% if(findMakale.makaleIcerigi.articletype === 'Computer') { %> selected <% } %>>Computer</option>
                  <option value="Math" <% if(findMakale.makaleIcerigi.articletype === 'Math') { %> selected <% } %>>Math</option>
                  <option value="Science" <% if(findMakale.makaleIcerigi.articletype === 'Science') { %> selected <% } %>>Science</option>
                </select>
              </div>
              <div>
                <label for="textAreaThesis" class="form-label">Makalenizi Buraya Yazınız...</label>
                <textarea name="textAreaThesis" class="form-control" id="textAreaThesis" rows="3"><%= findMakale.makaleIcerigi.textAreaThesis %></textarea>
              </div>
            </div>
          </div>
        </div>
  
       
        <div class="col-xl-6">
            <!-- HTML5 Inputs -->
            

            <!-- File input -->
            <div class="card">
              <h5 class="card-header">File input</h5>
              <div class="card-body">
                <div class="mb-3">
                  <label for="formFile" class="form-label">Düzenlenmiş pdf</label>
                  <input class="form-control" name="pdf_thesis" type="file" id="formFile">
                 
                </div>
              
                
              </div>
            </div>
            
          </div>
        <button type="submit" class="btn btn-primary btn-lg mt-2">Makaleyi Güncelle</button>
      </form>
    </div>
  </div>